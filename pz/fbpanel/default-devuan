Global {
    edge = bottom
    allign = center
    margin = 0
    widthtype = percent
    width = 100
    height = 24
    transparent = true
   #tintcolor = #ffffff
    alpha = 222
    setdocktype = true
    setpartialstrut = true
    autohide = false
    heightWhenHidden = 2
    roundcorners = false
    #roundcornersradius = 7
    layer = none
    MaxElemHeight = 32
}

Plugin {
    type = menu
    config {
        IconSize = 22
        #icon = start-here
        # Use a nice Debian logo for the menu list ;-)
        image = /usr/share/pixmaps/debian-logo.png
        systemmenu {
        }
        separator {
        }
	menu {  
	    name = Computer
	    icon = computer
            item {
                name = 锁住
                icon = gnome-lockscreen
                action = slock
            }
            item {
                name = 重启
                icon = gnome-session-reboot
                action = sudo reboot
            }
            item {
                name = 关机
                icon = gnome-session-halt
                action = sudo shutdown -h now
            }
            item {
                name = logout
                icon = gnome-session-logout
                action = /usr/lib/fbpanel/fbpanel/xlogout
            }
        }
    }
}

Plugin {
    type = launchbar
    config {
        button {
            icon = xfe
            tooltip = 文件
            action = xfe
        }
        button {
            icon = qterminal
            tooltip = 命令行
            action = qterminal
        }
	button {
            icon = web-browser
            tooltip = 网页
            action = firefox
    	}
    }
}

Plugin {
    type = taskbar
    expand = true
    config {
        ShowIconified = true
        ShowMapped    = true
        ShowAllDesks  = false
        tooltips = true
        IconsOnly = false
        MaxTaskWidth = 130
    }
}

Plugin {
    type = wincmd
    config {
        icon = gnome-fs-desktop
        tooltip = 全部缩小
    }
