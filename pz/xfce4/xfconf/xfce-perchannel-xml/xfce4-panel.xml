<?xml version="1.0" encoding="UTF-8"?>

<channel name="xfce4-panel" version="1.0">

# 面板配置开始
  <property name="configver" type="int" value="2"/>
  <property name="panels" type="array">
    <value type="int" value="1"/>

    #面板1配置
    <property name="panel-1" type="empty">
      <property name="position" type="string" value="p=6;x=0;y=0"/>
      <property name="length" type="uint" value="100"/>
      <property name="position-locked" type="bool" value="true"/>
      <property name="size" type="uint" value="25"/>

      <property name="plugin-ids" type="array">
      #插件从左到右排列，value是插件编号
        <value type="int" value="1"/>
        <value type="int" value="2"/>
        <value type="int" value="3"/>
        <value type="int" value="4"/>
        <value type="int" value="5"/>
        <value type="int" value="6"/>
      </property>

      <property name="disable-struts" type="bool" value="false"/>
      <property name="length-adjust" type="bool" value="false"/>
      <property name="background-alpha" type="uint" value="100"/>
      <property name="enter-opacity" type="uint" value="100"/>
      <property name="leave-opacity" type="uint" value="100"/>
      <property name="mode" type="uint" value="0"/>
      <property name="background-style" type="uint" value="1"/>
      <property name="background-color" type="array">
        <value type="uint" value="15256"/>
        <value type="uint" value="18674"/>
        <value type="uint" value="21687"/>
        <value type="uint" value="65535"/>
      </property>
    </property>
  </property>
    # 面板配置结束

  <property name="plugins" type="empty">

  #开始菜单,
    <property name="plugin-1" type="string" value="applicationsmenu">
      <property name="custom-menu" type="bool" value="false"/>
      <property name="show-menu-icons" type="bool" value="true"/>
      <property name="button-title" type="string" value="false"/>
      <property name="button-icon" type="string" value="xfce4-panel-menu"/>
    </property>

    #打开的窗口列表
    <property name="plugin-2" type="string" value="tasklist">
      <property name="show-handle" type="bool" value="true"/>
      <property name="show-labels" type="bool" value="true"/>
      <property name="flat-buttons" type="bool" value="false"/>
      <property name="window-scrolling" type="bool" value="false"/>
    </property>

    #分隔符
    <property name="plugin-3" type="string" value="separator">
      <property name="expand" type="bool" value="true"/>
      <property name="style" type="uint" value="0"/>
    </property>

    #时钟
    <property name="plugin-4" type="string" value="clock">
      <property name="mode" type="uint" value="2"/>
      <property name="tooltip-format" type="string" value="%F%n%j/365"/>
      <property name="digital-format" type="string" value="%R"/>
      <property name="fuzziness" type="uint" value="0"/>
    </property>

    #一些系统程序图标
    <property name="plugin-5" type="string" value="systray">
      <property name="names-visible" type="array">
    </property>

    #显示桌面
    <property name="plugin-6" type="string" value="showdesktop"/>
  </property>

</channel>
