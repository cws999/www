            }
            item {
                name = 关机Shutdown
                icon = ac-adapter
                action = sudo halt -p
            }
            item {
                name = OutToCmd
                icon = application-exit
                action = /usr/lib/fbpanel/fbpanel/xlogout
            }
        }
    }
}

